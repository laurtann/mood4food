    <link rel="stylesheet" href="/styles/footer.css" type="text/css" />
    <link rel="stylesheet" href="/styles/login.css" type="text/css" />

    <script
        src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/header.js"></script>
    <script type="text/javascript" src="../public/scripts/login_reg_error.js"></script>

  </head>

<body>
  <main>
  <%- include('partials/_header') %>
  <div class="signin-form">
    <form action="/login" method="post">
      <h2>Login</h2>
      <p class="hint-text">Let's login and explore the good stuff</p>

      <div class="form-group">
        <input type="email" class="form-control" name="email" placeholder="Email" required="required">
      </div>
      <div class="form-group">
        <input type="password" class="form-control" name="password" placeholder="Password" required="required">
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-success btn-lg btn-block">Login Now</button>
      </div>
    </form>
    <% if (error) { %>
      <div class="text-center"><h2 style="color: red"><%= error %></h2></div>
    <% } %>
    <div class="text-center">Do not have an account? <a href="/register">Sign up</a></div>
  </div>
</main>

  <%- include('partials/_footer') %>

